<Application
    x:Class="Tinkoff.Acquiring.Sample.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Tinkoff.Acquiring.Sample.Converters"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <converters:StringFormatConverter x:Key="StringFormatConverter" />
            <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter" />

            <Color x:Key="Cerulean">#FF009ECF</Color>

            <SolidColorBrush x:Key="ApplicationAccentBrush" Color="{StaticResource Cerulean}" />
            <SolidColorBrush x:Key="CommonTextBrush" Color="#FF9299A2" />
            <SolidColorBrush x:Key="AccentTextBrush" Color="#FF333333" />
            <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="#FFEAECEE" />
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
